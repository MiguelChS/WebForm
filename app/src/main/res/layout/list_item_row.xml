<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="5dp"

    >


    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="72dp">

    <RelativeLayout
        android:id="@+id/imageWrapper"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/banner"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/img_row"
            />
    </RelativeLayout>



        <TextView
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txv_row"
            android:maxLength="35"
            android:ellipsize="end"
            android:text="Nuevo Formulario - Logistics Survey"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="70dp"
            />


        <TextView
            android:text="15 min"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deltaTime"
            android:layout_alignTop="@+id/txv_row"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />



        <TextView
            android:text="Enviando..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentState"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/txv_row"
            android:layout_alignStart="@+id/txv_row" />
    </RelativeLayout>




</android.support.v7.widget.CardView>