<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/borders"
    android:layout_height="wrap_content"
    android:padding="16dp">


    <ImageView
        android:id="@+id/img_row"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/deltaTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txv_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deltaTime"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/img_row"
        android:layout_toRightOf="@+id/img_row"
        android:editable="false"
        android:ellipsize="end"
        android:maxLength="21"
        android:text="aaaaaaaaaaaaaaaaaaaaaa"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/currentState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/deltaTime"
        android:layout_alignLeft="@+id/txv_row"
        android:layout_alignRight="@+id/deltaTime"
        android:layout_alignStart="@+id/txv_row"
        android:layout_below="@+id/txv_row"
        android:text="New Text" />


</RelativeLayout>

