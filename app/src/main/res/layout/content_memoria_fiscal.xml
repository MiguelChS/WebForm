<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/viewD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="20dp">

        <fragment
            android:id="@+id/fragmentWorkOrder"
            android:name="mc185249.webforms.WorkOrderFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_work_order"></fragment>

        <Spinner
            android:id="@+id/spinnerCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"></Spinner>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:imeOptions="actionNext"
                android:id="@+id/editTextCustRef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cust Ref #" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:imeOptions="actionNext"
                android:id="@+id/editTextSiteName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Site Name" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:imeOptions="actionNext"
                android:id="@+id/editTextPuntoVenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nro. Punto venta" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:imeOptions="actionNext"
                android:id="@+id/editTextPlacaFiscal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ver.Firmware placa fiscal" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:imeOptions="actionDone"
                android:id="@+id/editTextSerieImpresora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Serie Impresora" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</ScrollView>