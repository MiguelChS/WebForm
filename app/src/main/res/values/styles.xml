<resources>

    <style name="NCRTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#54B948</item>
        <item name="colorPrimaryDark">#388E3C</item>
        <item name="colorAccent">#8BC34A</item>
        <item name="android:tabWidgetStyle">@style/customTabWidget</item>

        <item name="displayOptions">showHome</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back</item>
        <item name="android:actionMenuTextColor">#FFF</item>
        <item name="actionMenuTextColor">#FFF</item>
    </style>


    <style name="NCRTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MainTheme" parent="@style/NCRTheme.NoActionBar">
        <item name="imageButtonStyle">@style/ButtonsMain</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ButtonsMain" parent="Base.Widget.AppCompat.Button">
        <item name="elevation">4dp</item>
        <item name="android:background">#333333</item>
        <item name="android:colorBackground">#333</item>
    </style>


    <!-- ROW GRID LAYOUT -->
    <style name="RowGrid">
        <item name="android:textViewStyle">@style/TextView</item>
    </style>

    <!-- FILTER DIALOG -->
    <style name="FilterDialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="windowNoTitle">true</item>


    </style>

    <style name="TextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">#FFF</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="colorControlNormal">#FFF</item>
    </style>


    <style name="Etiquetas">
        <item name="android:background">@color/negro_semitransparente</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="gridStyle">
        <item name="android:padding">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="gridHeader">
        <item name="android:textColor">#91000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">Roboto Medium</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="gridContent">
        <item name="android:textColor">#de000000</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_weight">1</item>

        <item name="android:fontFamily">Roboto Regular</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="NCRTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="colorControlNormal">#FFF</item>
    </style>

    <style name="NCRTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="colorControlNormal">#FFF</item>
    </style>


    <!-- Alert Dialog -->
    <style name="alertDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--Toolbar theme -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <item name="android:actionMenuTextColor">@android:color/holo_green_light</item>
    </style>
    <!-- This configures the styles for the title within the Toolbar  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="customTheme" parent="@style/NCRTheme">
        <item name="android:tabWidgetStyle">@style/customTabWidget</item>
    </style>
    <style name="customTabWidget" parent="@android:style/Widget.TabWidget">
        <item name="android:textAppearance">@style/customTabText</item>
    </style>
    <style name="customTabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources> 
